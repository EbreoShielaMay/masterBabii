<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸŒŒ 1ï¸âƒ£ Background photo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/clouds" />

    <!-- â˜ï¸ 2ï¸âƒ£ Semi-transparent white overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33FFFFFF" /> <!-- about 20% opacity white -->

    <!-- ðŸ§¾ 3ï¸âƒ£ Foreground UI content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo Section -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="48dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_gradient_bg"
                    android:contentDescription="Logo Background" />

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    android:contentDescription="Moon Icon"
                    android:src="@drawable/ic_dreamcatcher"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="SleepWell"
                android:textColor="@color/sky_deepest_purple"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- Subtitle 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Your Health &amp; Well-Being Companion"
                android:textColor="@color/grass_shadow"
                android:textSize="18sp" />

            <!-- Subtitle 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:text="Track your sleep, improve your life"
                android:textColor="@color/grass_shadow"
                android:textSize="14sp" />

            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_login_background"
                android:text="Login to Your Account"
                android:textColor="@color/highlight_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Register Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/button_register_background"
                android:text="Register New Account"
                android:textColor="@color/highlight_white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Footer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="SDG 3: Health &amp; Well-Being Tracker"
                    android:textColor="@color/grass_shadow"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Promoting healthy sleep habits for better well-being"
                    android:textColor="@color/grass_shadow"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
