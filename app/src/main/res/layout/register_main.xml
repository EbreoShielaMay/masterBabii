<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸŒŒ 1ï¸âƒ£ Background photo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/starry_sky" />

    <!-- â˜ï¸ 2ï¸âƒ£ Semi-transparent white overlay (low opacity) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50FFFFFF" />  <!-- 33 = ~20% opacity white -->

    <!-- ðŸ§¾ 3ï¸âƒ£ Main content (ScrollView + UI) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Logo and Title Section -->
            <!-- Logo -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logo_gradient_bg"
                android:gravity="center"
                android:elevation="8dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_dreamcatcher"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Dreamcatcher"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/grass_shadow"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your sleep, improve your health"
                android:textSize="14sp"
                android:textColor="@color/grass_shadow"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <!-- Form Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/login_card_bg"
                android:padding="32dp">

                <!-- Name Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/grass_shadow"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Your Name"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:textColor="@color/mountain_medium_plum"
                        android:textColorHint="@color/mountain_medium_plum"
                        android:inputType="text" />
                </LinearLayout>

                <!-- Email Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/grass_shadow"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="your.email@example.com"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:textColor="@color/mountain_medium_plum"
                        android:textColorHint="@color/mountain_medium_plum"
                        android:inputType="textEmailAddress" />
                </LinearLayout>

                <!-- Password Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/grass_shadow"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Enter your password"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:textColor="@color/mountain_medium_plum"
                        android:textColorHint="@color/mountain_medium_plum"
                        android:inputType="textPassword" />
                </LinearLayout>

                <!-- Confirm Password Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/grass_shadow"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/confirmation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Confirm your password"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/input_background"
                        android:textSize="14sp"
                        android:textColor="@color/mountain_medium_plum"
                        android:textColorHint="@color/mountain_medium_plum"
                        android:inputType="textPassword" />
                </LinearLayout>

                <!-- Sign Up Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/user_register_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Register"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_signup_background"
                    android:layout_marginBottom="16dp" />

                <!-- Demo Info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demo: Use any email and password to register"
                    android:textSize="12sp"
                    android:textColor="@color/grass_shadow"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDG 3: Health &amp; Well-Being Tracker"
                android:textSize="12sp"
                android:textColor="@color/grass_shadow"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
